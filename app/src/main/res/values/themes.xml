<resources>

    <!-- Custom app theme with ActionBar -->
    <style name="Theme.StoryApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Background color for the app -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>

        <!-- Customize ActionBar -->
        <item name="actionBarStyle">@style/CustomActionBar</item>
    </style>

    <!-- Style for ActionBar -->
    <style name="CustomActionBar" parent="Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/purple_500</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <!-- Style for ActionBar title -->
    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- A theme for your activities that uses AppCompat with ActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_200</item>
    </style>
</resources>
